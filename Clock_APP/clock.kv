<label>:
     font_name: 'Digital'
     font_size: 65
     markup: True
<DigitalButton@Button>:
     border: (2, 2, 2, 2)
     font_name: 'Digital'
     font_size: 35
     bold: True
     background_normal: './buttons/green_button_down.png'
     background_down: './buttons/green_button_down.png'

BoxLayout:
     orientation: 'vertical'

     Label:
          id: clock_disp
          text: '[b]00:00[/b][size=45]:00[/size]'
     BoxLayout:
          height: 80
          orientation: 'horizontal'
          padding: 15
          spacing: 25
          size_hint: (1, 0)

          DigitalButton:
               id: sw
               text: 'Start'
               background_normal: './buttons/green_button_down.png' if root.ids.sw.text == 'Start' else './buttons/red_button_down.png'
               on_press: app.sw()

          DigitalButton:
               id: reset
               text: 'Reset'
               background_normal: './buttons/orange_button_normal.png'
               background_down: './buttons/orange_button_down.png'
               on_press: app.reset()
     Label:
          id: stopwatch
          text: '00:00.[size=45]00[/size]'